<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_to"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.survy.androidsandbox.sharedElementTransition.ToActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_image_to"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:src="@drawable/profile"
            android:transitionName="@string/shared_image_transition_name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Sarvagya Vaish" />

    </LinearLayout>

</FrameLayout>
